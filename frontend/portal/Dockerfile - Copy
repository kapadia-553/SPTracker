# Multi-stage build for Angular workspace
FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install Angular CLI globally
RUN npm install -g @angular/cli@18

# Install dependencies
RUN npm ci --legacy-peer-deps

# Copy source code
COPY . .

# Build shared library first
RUN ng build shared

# Build portal application
RUN ng build portal --configuration production


# Production stage for Portal
FROM nginx:alpine AS portal
COPY --from=builder /app/dist/portal /usr/share/nginx/html
COPY portal/nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
