# IMPORTANT: Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to git - it contains sensitive information

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=sptrack
POSTGRES_USER=postgres
# Generate a strong password: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_ISSUER=SP-Track
JWT_AUDIENCE=SP-Track-Users
# Generate a secure key: openssl rand -base64 32
# Must be at least 32 characters
JWT_KEY=CHANGE_ME_TO_RANDOM_32_CHAR_STRING

# =============================================================================
# MINIO (S3-Compatible Storage)
# =============================================================================
# Generate strong credentials for MinIO
MINIO_ROOT_USER=CHANGE_ME_MINIO_USER
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD

# =============================================================================
# SMTP CONFIGURATION (Outbound Emails)
# =============================================================================
# For Office 365 / Outlook
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# For Gmail (requires app password with 2FA enabled)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587

# For SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key

# =============================================================================
# IMAP CONFIGURATION (Inbound Email Processing)
# =============================================================================
# For Office 365 / Outlook
IMAP_HOST=outlook.office365.com
IMAP_PORT=993
IMAP_USER=support@yourdomain.com
IMAP_PASS=your-app-password

# For Gmail
# IMAP_HOST=imap.gmail.com
# IMAP_PORT=993

# =============================================================================
# APPLICATION URLs
# =============================================================================
# Replace with your actual domain
APP_BASE_URL=https://api.yourdomain.com
PORTAL_ADMIN_URL=https://agent.yourdomain.com
PORTAL_AGENT_URL=https://portal.yourdomain.com

# =============================================================================
# TENANT CONFIGURATION
# =============================================================================
TENANT_DEFAULT_TIMEZONE=Asia/Dubai

# =============================================================================
# OPTIONAL: Custom Port Mappings (if needed)
# =============================================================================
# If you need to change the default ports, uncomment and modify:
# HTTP_PORT=80
# HTTPS_PORT=443
