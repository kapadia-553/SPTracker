{
  "info": {
    "name": "SP Track API",
    "description": "Complete API collection for SP Track issue tracking system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "sp-track-api-collection"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Agent Login",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@spsolutions.ae\",\n  \"password\": \"Admin@12345\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Request Magic Link",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@demo.com\",\n  \"tenantSlug\": \"demo\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/magic-link",
              "host": ["{{base_url}}"],
              "path": ["auth", "magic-link"]
            }
          }
        }
      ]
    },
    {
      "name": "Tickets",
      "item": [
        {
          "name": "Get Tickets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tickets?page=1&pageSize=20",
              "host": ["{{base_url}}"],
              "path": ["tickets"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Create Ticket",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Sample Issue\",\n  \"description\": \"This is a sample issue for testing\",\n  \"priority\": \"P3\",\n  \"severity\": \"Medium\",\n  \"projectId\": \"12345678-1234-1234-1234-123456789013\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/tickets",
              "host": ["{{base_url}}"],
              "path": ["tickets"]
            }
          }
        },
        {
          "name": "Get Ticket Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tickets/DEMO-0001",
              "host": ["{{base_url}}"],
              "path": ["tickets", "DEMO-0001"]
            }
          }
        },
        {
          "name": "Add Comment",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"body\": \"This is a comment on the ticket\",\n  \"isInternal\": false\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/tickets/DEMO-0001/comments",
              "host": ["{{base_url}}"],
              "path": ["tickets", "DEMO-0001", "comments"]
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Issues Report",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/reports/issues?dateFrom=2024-01-01&dateTo=2025-12-31",
              "host": ["{{base_url}}"],
              "path": ["reports", "issues"],
              "query": [
                {
                  "key": "dateFrom",
                  "value": "2024-01-01"
                },
                {
                  "key": "dateTo",
                  "value": "2025-12-31"
                }
              ]
            }
          }
        },
        {
          "name": "Export Issues CSV",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/reports/issues?format=csv&dateFrom=2024-01-01&dateTo=2025-12-31",
              "host": ["{{base_url}}"],
              "path": ["reports", "issues"],
              "query": [
                {
                  "key": "format",
                  "value": "csv"
                },
                {
                  "key": "dateFrom",
                  "value": "2024-01-01"
                },
                {
                  "key": "dateTo",
                  "value": "2025-12-31"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Seed Data",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/admin/seed",
              "host": ["{{base_url}}"],
              "path": ["admin", "seed"]
            }
          }
        },
        {
          "name": "Export Tenant Data",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/admin/tenants/12345678-1234-1234-1234-123456789012/export",
              "host": ["{{base_url}}"],
              "path": ["admin", "tenants", "12345678-1234-1234-1234-123456789012", "export"]
            }
          }
        }
      ]
    }
  ]
}